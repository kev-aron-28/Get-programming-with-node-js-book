<h1>User Data for
    <%= userPage.fullName %>
  </h1>
  <table class="table">
    <tr>
      <th>Name</th>
      <td>
        <%= userPage.fullName %>
      </td>
    </tr>
    <tr>
      <th>Email</th>
      <td>
        <%= userPage.email %>
      </td>
    </tr>
    <tr>
      <th>Zip Code</th>
      <td>
        <%= userPage.zipCode %>
      </td>
    </tr>
    <tr>
      <th>ApiToken:</th>
      <td>
        <%= userPage.apiToken %>
      </td>
    </tr>
    <tr>
      <th>Password</th>
      <td class="hidden-text">
        <%= userPage.password %>
      </td>
    </tr>
  </table>
  
  <% if (userPage.subscribedAccount) { %>
  <h4 class="center"> This userPage has a
    <a href="<%=`/subscribers/${userPage.subscribedAccount}` %>">
      subscribed account</a>.
  </h4>
  <% } %>
  
  <div>
    <a class="button" href="/users">View all users</a>
  </div>
  <div>
    <a class="button" href="<%=`/users/${userPage._id}/edit`%>">
      Edit User Details
    </a>
  </div>
  <div>
    <a class="button" href="<%= `/users/${userPage._id}/delete?_method=DELETE` %>" onclick="return confirm('Are you sure you want to delete this record?')">Delete</a>
  </div>